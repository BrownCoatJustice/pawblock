{
  "manifest_version": 2,
  "name": "PawBlock",
  "version": "0.1.0",
  "description": "Prevent procastination by blocking websites with pictures of animals",

  "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },

  "background": {
      "scripts": ["blockCheck.js"],
      "persistent": false
  },

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },

  "permissions": [
    "storage",
    "webNavigation"
  ]
}
