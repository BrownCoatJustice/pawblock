{
  "manifest_version": 2,
  "name": "PawBlock",
  "version": "0.1.0",

  "description": "Soft blocks websites with pictures of cute but sad animals",

  "background": {
      "scripts": ["blockCheck.js"],
      "persistent": false
  },

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },

  "permissions": [
    "storage",
    "webNavigation"
  ]
}
